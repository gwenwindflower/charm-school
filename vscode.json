{
  // language-specific settings
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jinja-sql]": {
    "editor.formatOnSave": false
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.quickSuggestions": {
      "comments": "on",
      "other": "on",
      "strings": "on"
    },
    "editor.rulers": [
      80
    ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "[sql]": {
    // these are my custom syntax highligting rules to add italics in SQL
    "editor.tokenColorCustomizations": {
      "textMateRules": [
        {
          "scope": [
            "comment",
            "constant", //String, Number, Boolean…, this, super
            "keyword", //import, export, return…
            "markup.italic",
            "meta.selector",
            "storage.modifier", //static keyword
            "storage.type",
            "storage.type.class.js", //class keyword
            "variable.language"
          ],
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "scope": [
            //following will be excluded from italics
            "invalid",
            "keyword.operator",
            "constant.numeric.css",
            "keyword.other.unit.px.css",
            "constant.numeric.decimal.js",
            "constant.numeric.json",
            "constant.numeric.sql",
            "variable.other"
          ],
          "settings": {
            "fontStyle": ""
          }
        },
        {
          "scope": [
            "constant.other.database-name.sql"
          ],
          "settings": {
            "fontStyle": "italic",
            "foreground": "#ea9a97"
          }
        },
        {
          "scope": [
            "constant.other.table-name.sql",
            "support.function.security.sql"
          ],
          "settings": {
            "fontStyle": "",
            "foreground": "#fff"
          }
        }
      ]
    }
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  // tags i want autoclose on, primiarly templating language files
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "blade",
    "ejs",
    "jinja",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "plaintext",
    "markdown",
    "vue",
    "liquid",
    "erb",
    "lang-cfml",
    "cfml",
    "HTML (Eex)",
    "python"
  ],
  // bujo can automatically make a time log, I don't really use this
  "bujo.scheduler.plannerPrefix": "daily.log",
  // dbt - we don't uppercase keywords in this house
  "dbt-formatter.upper": false,
  "dbt.listModelsDisabled": true,
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "line",
  "editor.fontFamily": "'Ellograph CF', 'Fira Code Nerd Font'",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "100",
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.minimap.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": false,
  // dbt - this lets Jinja work in SQL files
  "files.associations": {
    "*.sql": "jinja-sql"
  },
  "git.ignoreMissingGitWarning": true,
  "githubIssues.queries": [
    {
      "label": "My Issues",
      "query": "default"
    }
  ],
  "githubIssues.useBranchForIssues": "prompt",
  "githubPullRequests.pullBranch": "never",
  "jupyter.askForKernelRestart": false,
  "jupyter.themeMatplotlibPlots": true,
  "markdown-checkbox.checkmark": "x",
  "markdown-checkbox.dateFormat": "YYYY.MM.DD HH:mm",
  "markdown-checkbox.typeOfBulletPoint": "-",
  "markdown.extension.print.theme": "dark",
  "projectManager.git.baseFolders": [
    "~/dev/"
  ],
  "projects.configPath": "~/.dotfiles/projectconfig.json",
  "projects.refreshRoots": [
    "~/dev/"
  ],
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.venvPath": "~/Library/caches/pypoetry/virtualenvs",
  "redhat.telemetry.enabled": false,
  "terminal.external.osxExec": "alacritty.app",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "terminal.integrated.fontFamily": "'Ellograph CF', 'Fira Code Nerd Font'",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": 100,
  "terminal.integrated.fontWeightBold": 400,
  "terminal.integrated.tabs.enabled": true,
  "vim.easymotion": true,
  "vim.insertModeKeyBindings": [
    {
      "after": [
        "<Esc>"
      ],
      "before": [
        "j",
        "j"
      ]
    }
  ],
  "vim.leader": ",",
  "vim.useSystemClipboard": true,
  "window.autoDetectColorScheme": true,
  "window.autoDetectHighContrast": false,
  "workbench.activityBar.visible": true,
  "workbench.colorCustomizations": {
    "[Dracula]": {
      "editor.selectionBackground": "#ff79c677",
      "editorCursor.foreground": "#ff79c6"
    }
  },
  "workbench.colorTheme": "Rosé Pine Moon",
  "workbench.preferredDarkColorTheme": "Rosé Pine Moon",
  "workbench.preferredLightColorTheme": "Rosé Pine Dawn",
  "workbench.startupEditor": "readme",
  "terminal.integrated.defaultLocation": "editor"
}